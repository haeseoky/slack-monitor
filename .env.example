# API Monitoring Configuration

# Slack Webhook URL (필수)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Slack 채널 (기본값: #ocean)
SLACK_CHANNEL=#ocean

# 체크 간격 (밀리초, 기본값: 60000 = 1분)
CHECK_INTERVAL=60000

# 에러 발생 시 알림 (기본값: true)
NOTIFY_ON_ERROR=true

# 성공 시 알림 (기본값: false)
NOTIFY_ON_SUCCESS=false

# 요약 알림 전송 - 여러 API 결과를 한 번에 전송 (기본값: true)
# false로 설정하면 각 API마다 개별 알림 전송
SEND_SUMMARY=true

# 응답 시간 임계값 (밀리초, 기본값: 1000)
# 이 시간을 초과하면 경고 알림 표시
RESPONSE_TIME_THRESHOLD=1000

# 느린 응답 시 알림 (기본값: true)
NOTIFY_ON_SLOW_RESPONSE=true

# ===========================================
# 뽐뿌 모니터링 설정
# ===========================================

# 뽐뿌 게시판 모니터링 활성화 여부 (기본값: false)
PPOMPPU_MONITOR_ENABLED=true

# 뽐뿌 체크 간격 (밀리초, 기본값: 60000 = 1분)
PPOMPPU_CHECK_INTERVAL=60000

# ===========================================
# Slack 다중 채널 설정
# ===========================================

# 채널별 웹훅 URL 설정 (쉼표로 구분)
# 형식: channel1=url1, channel2=url2, ...
# 예시: health=https://hooks.slack.com/services/XXX, ppomppu=https://hooks.slack.com/services/YYY
SLACK_WEBHOOK_URLS=health=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# 기본 채널 (SLACK_WEBHOOK_URLS에 정의된 채널명 중 하나)
SLACK_DEFAULT_CHANNEL=health
